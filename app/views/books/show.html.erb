<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

     <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
  </head>
  <body>
    <div class="show-book">
      <div class="flash">
        <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>
      </div>
      <p>
        <strong>Title:</strong>
        <%= @book.title %>
      </p>
      <p>
        <strong>Body:</strong>
        <%= @book.body %>
      </p>
    </div>  
      
    <%= link_to "Edit", edit_book_path %>
       | 
    <%= link_to "Back", books_path %>
      
  </body>
</html>